{
  "$schema": "https://railway.app/railway.schema.json",
  "services": [
    {
      "name": "backend",
      "service": "mysql"
    },
    {
      "name": "frontend",
      "build": {
        "builder": "NIXPACKS",
        "nixpacksConfig": {
          "phases": {
            "build": {
              "cmds": ["npm install", "npm run build"]
            }
          }
        },
        "rootDir": "/frontend"
      },
      "deploy": {
        "startCommand": "serve -s dist -p $PORT",
        "healthcheckPath": "/"
      }
    },
    {
      "name": "backend",
      "build": {
        "builder": "NIXPACKS",
        "rootDir": "/backend"
      },
      "deploy": {
        "startCommand": "php artisan serve --host 0.0.0.0 --port $PORT",
        "healthcheckPath": "/up",
        "preDeploySteps": ["php artisan migrate:fresh --seed"]
      }
    }
  ]
}
